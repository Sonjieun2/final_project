<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="150dp">

    <Chronometer
        android:id="@+id/dialogTimer"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="30dp"
        android:format="%s"
        android:layout_marginTop="20dp"/>
    <ImageButton
        android:id="@+id/startStopButton"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="20dp"
        android:text="Stop"
        android:onClick="startStopDialogChronometer"
        android:src="@drawable/timer_start_btn"
        android:backgroundTint="#00FFFFFF"
        android:layout_alignLeft="@+id/dialogTimer"/>
    <ImageButton
        android:id="@+id/resetButton"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="20dp"
        android:onClick="stopDialogChronometer"
        android:src="@drawable/timer_reset_btn"
        android:backgroundTint="#00FFFFFF"
        android:layout_alignRight="@+id/dialogTimer"/>
    <ImageButton
        android:id="@+id/closeViewButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/view_close_btn"
        android:backgroundTint="#00FFFFFF"
        android:layout_toRightOf="@+id/dialogTimer"/>
</RelativeLayout>